pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
function _init()
 -- enable mouse devkit
 poke(0x5f2d, 1)
end

function _draw()
 -- clean the screen
 cls()
 
 -- print mouse coordinates
 print("x: "..stat(32))
 print("y: "..stat(33))
 
 -- print pressed buttons
 but = ""
 if stat(34) & 1 != 0 then
  but = but.."left "
 end
 if stat(34) & 4 != 0 then
  but = but.."mid "
 end
 if stat(34) & 2 != 0 then
  but = but.."right "
 end
 if stat(34) == 0 then
 	but = "none"
 end
 print("button: "..but)
 
 -- show cursor
 spr(1,stat(32),stat(33),2,2)
end

